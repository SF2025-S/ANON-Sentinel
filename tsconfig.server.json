{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "dist",
      "noEmit": false,
      "isolatedModules": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react"
    },
    "include": ["src/server/**/*", "src/lib/**/*"],
    "exclude": ["node_modules"]
  }
  